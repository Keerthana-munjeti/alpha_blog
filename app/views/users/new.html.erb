<div class = "container">
<h3>Welcome new user!</h3>

<%= form_with scope: :user,  class: "shadow p-3 mb-5 bg-info rounded",  url:users_path, local:true do |f| %>
    <div class="form-group">
    <%= f.label:username, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.text_field :username %>
</div>
</div>

<div class="form-group">
    <%= f.label:email, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.email_field :email %>
</div>
</div>

<div class="form-group">
    <%= f.label:password, class: "col-2 col-form-label"%>
    <div class="col-10">
    <%= f.password_field :password %>
    </div>

    </div>
    <div class="row justify-content-center">
  <div class="form-group row">
    <%= f.submit "Sign-up", class: "btn btn-primary btn-outline-light"%> 

    
<% end %>
</div>
</div>
</div>