<div id="page-content">
<h1 class="text-center">Listing all articles</h1>
<div class="container">

<% @articles.each do |t| %>
  <div class="row  justify-content-md-center" >
  <div class="col-8" mt-4>
  <div class="card text-center  shadow  mb-5 bg-white rounded">
  <div class="card-header">
    by <%= t.user.username %>
  </div>
  <div class="card-body">
    <h5 class="card-title"> <%= link_to t.title, article_path(t), class: "text-success" %></h5>
    <p class="card-text"> <%= t.description %> </p>
    
   <a> <%= link_to 'View', article_path(t) ,class: "btn btn-outline-success" %> </a>
   <a> <%= link_to 'Edit', edit_article_path(t) ,class: "btn btn-outline-success" %> </a>
   <a> <%= link_to 'Delete', article_path(t) ,method: :delete, data: { confirm: "Are you sure "},class: "btn btn-outline-success" %> </a>
    
    
  </div>
  <div class="card-footer text-muted">
   <small>Created <%= time_ago_in_words(t.created_at )%> ago,
   edited <%= time_ago_in_words(t.updated_at) %> ago </small>
  </div>
</div>
</div>
</div>


   
   
<% end %>
</div>