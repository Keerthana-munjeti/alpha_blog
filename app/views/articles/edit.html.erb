
<div class = "container">
<%= render 'shared/errors' %>
<h1>edit article</h1>
<%= form_with(model: @article, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :title , class: "col-2 col-form-label"%>
    <div class="col-10">
    <%= f.text_field :title %>
  </div>
  </div>


  <div class="form-group row">
    <%= f.label :description,  class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.text_area :description, rows:10, class: "form-control shadow rounded"%> 
  </div>
  </div>

  <div class="row justify-content-center">
  <div class="form-group row">
    <%= f.submit "Submit", class: "btn btn-primary btn-outline-light"%> 

<% end %>
</div>
</div>
</div>