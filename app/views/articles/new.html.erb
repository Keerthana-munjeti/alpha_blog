<div class = "container">
<%= render 'shared/errors' %>
<h1>Create a new article</h1>
 
<%= form_with scope: :article,class: "shadow p-3 mb-5 bg-info rounded", url: articles_path, local: true do |f| %>
  <div class="form-group row">
    <%= f.label :title , class: "col-2 col-form-label"%>
    <div class="col-10">
    <%= f.text_field :title, placeholder:"Enter title" ,class: "form-control shadow rounded" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.text_area :description , rows:10,  placeholder: "Enter the description",  class: "form-control shadow rounded" %> 
  </div>
  </div>
  <div class="row justify-content-center">
  <div class="form-group row">
    <%= f.submit "Submit", class: "btn btn-primary btn-outline-light" %> 

<% end %>
</div>
</div>
</div>

